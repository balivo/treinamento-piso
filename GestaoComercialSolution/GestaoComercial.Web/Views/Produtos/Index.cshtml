@using GestaoComercial.Web.ViewModels.Produtos

@model ProdutosViewModel

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Produtos
        @*<small>advanced tables</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Produtos</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                    <div class="box-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            @*<input name="table_search" class="form-control pull-right" type="text" placeholder="Search">*@
                            @*<div class="input-group-btn">*@
                            @*<button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>*@
                            <a href="~/produtos/create" class="btn btn-default" data-ajax="true" data-ajax-update="#main-container">Novo</a>
                            @*</div>*@
                        </div>
                    </div>
                </div>
                <div class="box-body">
                    <table id="produtosCollection" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Nome do produto</th>
                                <th>Descrição</th>
                                <th>Valor</th>
                                <th data-orderable="false" data-searchable="false"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in this.Model.Produtos)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descricao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>
                                    <td>
                                        <a href="~/produtos/editar/@item.Id" class="btn btn-warning btn-xs" data-ajax="true" data-ajax-update="#main-container">Editar</a> |
                                        <a href="~/produtos/detalhes/@item.Id" class="btn btn-info btn-xs" data-ajax="true" data-ajax-update="#main-container">Exibir</a> |
                                        <a href="~/produtos/excluir/@item.Id" class="btn btn-danger btn-xs" data-ajax="true" data-ajax-update="#main-container">Excluir</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Nome do produto</th>
                                <th>Descrição</th>
                                <th>Valor</th>
                                <th data-orderable="false" data-searchable="false"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->
<script type="text/javascript">
    var TABLE_OPTIONS = {
        language:
        {
            "sEmptyTable": "Nenhum registro encontrado",
            "sInfo": "Exibindo de _START_ até _END_ de _TOTAL_ registros",
            "sInfoEmpty": "Exibindo 0 até 0 de 0 registros",
            "sInfoFiltered": "(Filtrados de _MAX_ registros)",
            "sInfoPostFix": "",
            "sInfoThousands": ".",
            "sLengthMenu": "Exibir _MENU_ itens por página",
            "sLoadingRecords": "Carregando...",
            "sProcessing": "Processando...",
            "sZeroRecords": "Nenhum registro encontrado",
            "sSearch": "Pesquisar",
            "oPaginate":
            {
                "sNext": "Próximo",
                "sPrevious": "Anterior",
                "sFirst": "Primeiro",
                "sLast": "Último"
            },
            "oAria":
            {
                "sSortAscending": ": Ordenar colunas de forma ascendente",
                "sSortDescending": ": Ordenar colunas de forma descendente"
            },
        },
        processing: false
    };

    $(function () {
        $('#produtosCollection').DataTable(TABLE_OPTIONS);
    });
</script>